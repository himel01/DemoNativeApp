<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:src="@drawable/background"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="How To Increase Your Talent Level?"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:padding="3dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_ondemand_video_24"
            android:layout_margin="5dp"
            android:id="@+id/icon1"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon1"
            android:layout_margin="5dp"
            android:id="@+id/text1"
            android:text="Live Broadcast"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:textAlignment="center"
            android:text="The longer you broadcast the better"
            android:textColor="#514C4C"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_card_giftcard_24"
            android:layout_margin="5dp"
            android:id="@+id/icon2"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon2"
            android:layout_margin="5dp"
            android:id="@+id/text2"
            android:text="Get Gifts"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text2"
            android:textAlignment="center"
            android:text="Talk about interesting topics"
            android:textColor="#514C4C"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/heart"
            android:layout_margin="5dp"
            android:id="@+id/icon3"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon3"
            android:layout_margin="5dp"
            android:id="@+id/text3"
            android:text="Get Hearts"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text3"
            android:textAlignment="center"
            android:text="Hearts can also increase levels"
            android:textColor="#514C4C"/>
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="Talent Privileges"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:padding="3dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/heart"
            android:layout_margin="5dp"
            android:id="@+id/icon4"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon4"
            android:layout_margin="5dp"
            android:id="@+id/text4"
            android:text="Higher Ranking"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text4"
            android:textAlignment="center"
            android:text="Your ranking on the board"
            android:textColor="#514C4C"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_perm_identity_24"
            android:layout_margin="5dp"
            android:id="@+id/icon5"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon5"
            android:layout_margin="5dp"
            android:id="@+id/text5"
            android:text="Reveal Identity"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text5"
            android:textAlignment="center"
            android:text="Exclusive Badges"
            android:textColor="#514C4C"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_article_24"
            android:layout_margin="5dp"
            android:id="@+id/icon6"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/icon6"
            android:layout_margin="5dp"
            android:id="@+id/text6"
            android:text="More Privileges"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text6"
            android:textAlignment="center"
            android:text="Stay tuned for more"
            android:textColor="#514C4C"/>
    </RelativeLayout>

</LinearLayout>